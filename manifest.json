{
  "manifest_version": 3,
  "name": "Copy Clean Link",
  "version": "1.0",
  "description": "Removes tracking parameters from URLs when copying",
  "permissions": [
    "contextMenus",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}